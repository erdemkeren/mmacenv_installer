  install_redis
  install_postman
  install_npm
  install_yarn
  install_snazzy
  install_pure_prompt
  install_slack
  install_rocket_chat
  install_rescuetime
  install_toptracker
  install_alfred
  install_dropbox
  # install_1password
  install_bitwarden
  install_google_chrome
